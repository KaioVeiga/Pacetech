Algoritmo "Entrega Algoritmo - Semana 3"

Var
   salario, aumento: real
   nome: caractere

Inicio
   Escreval("Digite seu nome: ")
   leia (nome)

   Escreval("Digite seu salario atual: ")
   leia (salario)

   aumento <- salario * 1.3

   Escreval("Parabens ",nome,"! Voce se esforÃ§ou bastante e ganhou um aumento de 30%!")
   Escreval("Seu salario agora chegou a: R$",aumento,",00")

Fimalgoritmo
